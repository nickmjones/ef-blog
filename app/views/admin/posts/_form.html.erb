<%= simple_form_for [:admin, @post] do |f| %>
  <div class="form-content">
    <div class="form-content__col">
      <%= f.input :title, label: false, placeholder: "Title", input_html: { class: 'post-title' } %>
      <%= f.input :body, label: false, placeholder: "Post content...", input_html: { class: 'post-body' } %>
    </div>

    <div class="form-content__col">

      <div class="form-content__col--sideitem">
        <h6>Post Status</h6>
        <p>
          <%= f.input :is_published, label: "Publish", as: :boolean do %>
            <%= f.check_box :is_published, {}, "true", "false" %>
          <% end %>
        </p>
        <p>
          <%= f.input :is_included_in_index, label: "Show on homepage", as: :boolean do %>
            <%= f.check_box :is_included_in_index, {}, "true", "false" %>
          <% end %>
        </p>
      </div>

      <div class="form-content__col--sideitem">
        <h6>Featured Image</h6>
        <% if @post.image.attached? %>
          <%= image_tag @post.image.variant(resize: "320x240"), class: 'bordered' %>
          <br/>
        <% end %>
        <%= f.input :image, label: false %>
      </div>

      <div class="form-content__col--sideitem">
        <h6>Post Synopsis</h6>
        <%= f.input :meta_desc, label: false, placeholder: "Add a description to this post for use by search engines.", input_html: { class: 'post-meta' } %>
      </div>

      <div class="form-content__col--sideitem">
        <h6>Author Settings</h6>
        <%= f.association :author, label_method: :email, :value_method => :id, label: false, :include_blank => false %>
      </div>

      <div class="form-content__col--sideitem borderless">
        <%= f.button :submit %>
      </div>
    </div>
  </div>
<% end %>
